<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/red" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="@color/black" />

    <!-- Corner radius (0 = bilkul box shape) -->
    <corners android:radius="0dp" />

    <!-- Padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
