<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#00000000"/>  <!-- Transparent background -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#00F0FF"/> <!-- Yellow border -->

    <!-- Corner Radius -->
    <corners android:radius="0dp"/>

    <!-- Padding (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
